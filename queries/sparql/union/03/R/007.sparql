PREFIX wd: <http://www.wikidata.org/entity/>
PREFIX p: <http://www.wikidata.org/prop/>
PREFIX ps: <http://www.wikidata.org/prop/statement/>
SELECT *
WHERE {
  {
    SELECT ?x ?y1
    WHERE {
      ?x
        p:P27 [ ps:P27 wd:Q38 ] ;
        p:P21 [ ps:P21 ?y1 ] ;
        p:P19 [ ps:P19 ?y2a ]
    }
  }
  UNION
  {
    SELECT ?x ?y1
    WHERE {
      ?x
        p:P27 [ ps:P27 wd:Q38 ] ;
        p:P21 [ ps:P21 ?y1 ] ;
        p:P19 [ ps:P19 ?y2b ]
    }
  }
}
